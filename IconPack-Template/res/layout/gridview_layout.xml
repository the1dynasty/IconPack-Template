<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center" 
    tools:context="gridview.Main">
    
    <!-- Change line 31 "@drawable/card_bg_pressed_inverted" -->
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/row_height"
	    android:background="@drawable/card_bg_pressed"
	    android:orientation="vertical"
	    android:padding="@dimen/list_icon"
	    tools:ignore="UselessParent" >
    
    <!-- Icon image layout - DO NOT EDIT -
    	 Change images in the MainAdapter.java file if you want to edit these lines -->
 
    <!-- Description for each view - DO NOT EDIT -
     	 Change the lines in the Fragment.java file if you want to edit these lines -->

	
    <!-- Title for each view - DO NOT EDIT -
     	 Change the lines in the MainAdapter.java file if you want to edit these lines -->


	<ImageView
	    android:id="@+id/list_image"
	    android:layout_width="@dimen/gridview_icon"
	    android:layout_height="@dimen/gridview_icon"
	    android:scaleType="fitCenter"
	    android:padding="@dimen/list_icon"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:contentDescription="@string/content_description"
	    android:src="@drawable/icon_email" />

	<TextView
	    android:id="@+id/title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginRight="@dimen/list_padding"
	    android:layout_marginLeft="@dimen/list_padding"
	    android:layout_below="@+id/list_image"
	    android:text="Community"
	    android:textColor="@color/list_title_color"
	    android:textSize="@dimen/grid_title_text"
	    tools:ignore="HardcodedText" />

	<!-- This is the pressed animation/highlight you see when you press a list item -->
	<ImageView
	    android:id="@+id/imageView1"
        android:contentDescription="@string/content_description"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/row_height"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:background="@drawable/card_bg_pressed_top" />

	<TextView
	    android:id="@+id/description"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/title"
	    android:layout_below="@+id/title"
	    android:text="Join our Google+ Community and share your themes or find themes to download!"
	    android:textColor="@color/list_desc_color"
	    android:textSize="@dimen/grid_desc_text"
	    tools:ignore="HardcodedText" />

	</RelativeLayout>
	
</RelativeLayout>