<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center" 
    tools:context="gridview.LauncherMain" >
    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/list_height"
	    android:background="@drawable/card_bg_pressed"
	    android:orientation="horizontal"
	    android:padding="@dimen/list_icon"
	    tools:ignore="UselessParent" >
    
    <ImageView
        android:id="@+id/list_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@mipmap/banner_apex"
        android:contentDescription="@string/content_description"
        android:scaleType="centerCrop" />

 
	<ImageView
	    android:id="@+id/imageView1"
        android:contentDescription="@string/content_description"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:background="@drawable/card_bg_pressed_top" />

	<TextView
	    android:id="@+id/title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true"
	    android:text="Apex"
	    android:textColor="@color/gray_light"
	    android:textSize="@dimen/launcher_title"
	    tools:ignore="HardcodedText" />

	</RelativeLayout>
	
</RelativeLayout>
