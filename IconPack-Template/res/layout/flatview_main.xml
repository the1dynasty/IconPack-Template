<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:layout_weight="1"
    android:scrollbars="none"
	android:orientation="vertical" >
	
<LinearLayout 
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" >

	<include
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    layout="@layout/feature_banner" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/flat_margin"
                android:layout_marginTop="@dimen/flat_margin"
                android:layout_weight="1"
                android:baselineAligned="false" >

                <LinearLayout
                    android:id="@+id/linearLayout07"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    tools:ignore="NestedWeights" >

                    <ImageButton
                        android:id="@+id/wallpaper"
                        android:layout_width="@dimen/flatview_icon"
                        android:layout_height="@dimen/flatview_icon"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_default_holo_dark"
                        android:contentDescription="@string/content_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_wall" />

                    <TextView
                        android:id="@+id/textView05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/wall_picker"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/app_font" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout03"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/themeinfo"
                        android:layout_width="@dimen/flatview_icon"
                        android:layout_height="@dimen/flatview_icon"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_default_holo_dark"
                        android:contentDescription="@string/content_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_info" />

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/about_theme"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/app_font" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/flat_margin"
                android:layout_marginTop="@dimen/flat_margin"
                android:layout_weight="1"
                android:baselineAligned="false" >

                <LinearLayout
                    android:id="@+id/linearLayout10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    tools:ignore="NestedWeights" >

                    <ImageButton
                        android:id="@+id/marketinfo"
                        android:layout_width="@dimen/flatview_icon"
                        android:layout_height="@dimen/flatview_icon"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_default_holo_dark"
                        android:contentDescription="@string/content_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_rate" />

                    <TextView
                        android:id="@+id/textView07"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/rateme"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/app_font" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/gplus"
                        android:layout_width="@dimen/flatview_icon"
                        android:layout_height="@dimen/flatview_icon"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_default_holo_dark"
                        android:contentDescription="@string/content_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_gplus" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/googleme"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/app_font" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/flat_margin"
                android:layout_marginTop="@dimen/flat_margin"
                android:layout_weight="1"
                android:baselineAligned="false" >

                <LinearLayout
                    android:id="@+id/linearLayout03"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    tools:ignore="NestedWeights" >

                    <ImageButton
                        android:id="@+id/sharetheme"
                        android:layout_width="@dimen/flatview_icon"
                        android:layout_height="@dimen/flatview_icon"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_default_holo_dark"
                        android:contentDescription="@string/content_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_share" />

                    <TextView
                        android:id="@+id/textView03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/icon_share"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/app_font" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/email"
                        android:layout_width="@dimen/flatview_icon"
                        android:layout_height="@dimen/flatview_icon"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_default_holo_dark"
                        android:contentDescription="@string/content_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_email" />

                    <TextView
                        android:id="@+id/email2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/content_description"
                        android:text="@string/email_dev"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/app_font" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/flat_margin"
                android:layout_marginTop="@dimen/flat_margin"
                android:layout_weight="1"
                android:baselineAligned="false" >

                <LinearLayout
                    android:id="@+id/LinearLayout02"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    tools:ignore="NestedWeights" >

                    <ImageButton
                        android:id="@+id/donate"
                        android:layout_width="@dimen/flatview_icon"
                        android:layout_height="@dimen/flatview_icon"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_default_holo_dark"
                        android:contentDescription="@string/content_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_wallet" />

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/donate"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/app_font" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout05"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/aboutdev"
                        android:layout_width="@dimen/flatview_icon"
                        android:layout_height="@dimen/flatview_icon"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_default_holo_dark"
                        android:contentDescription="@string/content_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_dev_logo" />

                    <TextView
                        android:id="@+id/textView04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/about_dev"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/app_font" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
	</LinearLayout>
</ScrollView>